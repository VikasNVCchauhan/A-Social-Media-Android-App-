<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relative_layout_about_user_alert_dialog_header_item_custom_alert_dialog_about_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_view_user_profile_picture_item_custom_alert_dialog_about_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="1dp"
                        android:src="@mipmap/horizontal_recycler_view_women"
                        app:civ_border_color="@color/colorAccent"
                        app:civ_border_width="0.5dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/text_view_follow_option_item_custom_alert_dialog_about_profile"
                        android:layout_toRightOf="@+id/circle_image_view_user_profile_picture_item_custom_alert_dialog_about_profile"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_view_user_name_item_custom_alert_dialog_about_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vikas Chauahn"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_user_unique_name_item_custom_alert_dialog_about_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nvc_vikas_chauhan_002"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_view_follow_option_item_custom_alert_dialog_about_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/background_follow_option"
                        android:gravity="center"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="Follow"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_follow_option_item_custom_alert_dialog_about_profile"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:indeterminateDrawable="@drawable/progress"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_user_activity_details_alert_dialog_header_item_custom_alert_dialog_about_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_layout_about_user_alert_dialog_header_item_custom_alert_dialog_about_profile"
                    android:layout_marginTop="9dp">

                    <LinearLayout
                        android:id="@+id/linear_layout_user_activity_details_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/NormaTextColor"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_view_post_upload_count_alert_dialog_header_item_custom_alert_dialog_about_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uploads"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_view_likes_count_alert_dialog_header_item_custom_alert_dialog_about_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 M"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Likes"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_view_follower_count_alert_dialog_header_item_custom_alert_dialog_about_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200k"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followers"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_biography_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_layout_user_activity_details_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="7dp"
                            android:layout_toLeftOf="@+id/text_view_biography_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:background="@color/NormaTextColor" />

                        <TextView
                            android:id="@+id/text_view_biography_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Biography"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/text_view_biography_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:background="@color/NormaTextColor" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_bio_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_layout_biography_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vikas Chauhan \nCHANDIGARH UNIVERSITY \n Himachali "
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_other_detail_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_layout_bio_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="7dp"
                            android:layout_toLeftOf="@+id/text_view_other_detail_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:background="@color/NormaTextColor" />

                        <TextView
                            android:id="@+id/text_view_other_detail_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="Other Details"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/text_view_other_detail_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:background="@color/NormaTextColor" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_contact_detail_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_layout_other_detail_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_view_contact_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_contacts_black_24dp" />

                        <LinearLayout
                            android:id="@+id/linear_layout_contact_detail__alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/image_view_contact_alert_dialog_header_item_custom_alert_dialog_about_profile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="15sp"
                                android:autoSizeMinTextSize="10dp"
                                android:paddingLeft="5dp"
                                android:text="Contact Number"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_navigate_next_black_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="15sp"
                                android:autoSizeMinTextSize="10dp"
                                android:paddingLeft="5dp"
                                android:text="8894586422"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_user_location_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_layout_contact_detail_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_view_location_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_location_on_black_24dp" />

                        <LinearLayout
                            android:id="@+id/linear_layout_user_location__alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/image_view_location_alert_dialog_header_item_custom_alert_dialog_about_profile">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="15sp"
                                android:autoSizeMinTextSize="10dp"
                                android:paddingLeft="5dp"
                                android:text="Home/Location"
                                android:textSize="13sp" />

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_navigate_next_black_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="15sp"
                                android:autoSizeMinTextSize="10dp"
                                android:paddingLeft="5dp"
                                android:text="Rampur, Shimla (HP)"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_family_member_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_layout_user_location_alert_dialog_header_item_custom_alert_dialog_about_profile"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="7dp"
                            android:layout_toLeftOf="@+id/text_view_family_and_friend_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:background="@color/NormaTextColor" />

                        <TextView
                            android:id="@+id/text_view_family_and_friend_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="Family And Friends"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@+id/text_view_family_and_friend_header_alert_dialog_header_item_custom_alert_dialog_about_profile"
                            android:background="@color/NormaTextColor" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_layout_family_member_alert_dialog_header_item_custom_alert_dialog_about_profile">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>