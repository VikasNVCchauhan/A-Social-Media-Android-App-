<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:id="@+id/relative_layout_user_profile_picture_activity_user_profile_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_user_profile_activity_user_profile_main"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@color/cardview_shadow_start_color" />

            <ProgressBar
                android:id="@+id/progress_bar_profile_image_view_activity_user_profile_main"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_view_unique_user_name_user_profile_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_image_user_profile_activity_user_profile_main"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="#chauhan_vikas" />

            <TextView
                android:id="@+id/text_view_name_user_profile_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_unique_user_name_user_profile_main_activity"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=" VIkas Chauahn"
                android:textStyle="bold" />

            <ImageView

                android:id="@+id/image_view_three_dot_option_menu_user_profile_main_activity"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_follow_activity_user_profile_main"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/relative_layout_user_profile_picture_activity_user_profile_main"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_follow__activity_user_profile_main"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/background_follow_option"
                android:elevation="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="SUBSCRIBE"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/image_view_share_profile_activity_user_profile_main"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/text_view_follow__activity_user_profile_main"
                android:src="@drawable/ic_share_orange_24dp" />

            <ImageView
                android:id="@+id/image_view_about_profile_activity_user_profile_main"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/image_view_share_profile_activity_user_profile_main"
                android:src="@drawable/ic_info_about_orange_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_counts_activity_user_profile_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout_follow_activity_user_profile_main"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linear_layout_followers_activity_user_profile_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_followers_count_activity_user_profile_main"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_person_profile_count_black_24dp" />

                <TextView
                    android:id="@+id/text_view_followers_count_activity_user_profile_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200k"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_view_followers_activity_user_profile_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscribers"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_hearts_activity_user_profile_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@+id/linear_layout_followers_activity_user_profile_main"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/circle_image_heart_activity_user_profile_main"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/heart_like_button_trnsparent_drawable" />

                <TextView
                    android:id="@+id/text_view_heart_count_user_profile_main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200k"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_view_heart_user_profile_main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_share_activity_user_profile_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/linear_layout_hearts_activity_user_profile_main"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/circle_image_Posts_activity_user_profile_main"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_add_to_photos_black_24dp" />

                <TextView
                    android:id="@+id/text_view_post_count_steam_main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_view_post_steam_main_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uploads"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_selection_options_activity_user_profile_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout_counts_activity_user_profile_main"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <TableRow
                android:id="@+id/hr1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#43444444"></TableRow>

            <View
                android:id="@+id/view_vertical_line_activity_user_profile_main"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5dp"
                android:background="#43444444" />

            <RelativeLayout
                android:id="@+id/relative_layout_videos_activity_user_profile_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"
                android:layout_toLeftOf="@+id/view_vertical_line_activity_user_profile_main"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_view_video_selection_option_activity_user_profile_main"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_upload_videocam_black_24dp" />
            </RelativeLayout>

            <TableRow
                android:id="@+id/hr2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/view_vertical_line_activity_user_profile_main"
                android:background="#43444444"></TableRow>

            <RelativeLayout
                android:id="@+id/relative_layout_images_activity_user_profile_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/view_vertical_line_activity_user_profile_main"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_view_image_selection_option_activity_user_profile_main"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_camera_alt_light_gray_white_24dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_layout_selection_options_activity_user_profile_main">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_videos_and_images_activity_user_profile_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </android.support.v7.widget.RecyclerView>

            <ProgressBar
                android:id="@+id/progress_bar_recycler_vie_activity_user_profile_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>