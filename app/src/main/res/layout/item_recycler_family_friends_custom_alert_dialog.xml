<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_about_user_alert_dialog_header_item_custom_alert_dialog_about_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_view_user_profile_picture_item_custom_alert_dialog_about_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="1dp"
        android:src="@mipmap/horizontal_recycler_view_women"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="0.5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/text_view_follow_option_item_custom_alert_dialog_about_profile"
        android:layout_toRightOf="@+id/circle_image_view_user_profile_picture_item_custom_alert_dialog_about_profile"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_user_name_item_custom_alert_dialog_about_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vikas Chauahn"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_user_unique_name_item_custom_alert_dialog_about_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nvc_vikas_chauhan_002"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_follow_option_item_custom_alert_dialog_about_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_follow_option"
        android:gravity="center"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="Follow"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
</RelativeLayout>