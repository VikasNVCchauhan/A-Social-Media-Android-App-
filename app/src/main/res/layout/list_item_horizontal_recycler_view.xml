<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="110dp"
        app:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_view_user_image_list_item_horizontal_recycler_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/horizontal_recycler_view_women" />

            <TextView
                android:ellipsize="end"
                android:id="@+id/text_view_user_name_list_item_horizontal_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_image_view_user_image_list_item_horizontal_recycler_view"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="#chauhan_vikas"
                android:textSize="10dp" />

            <Button
                android:id="@+id/button_follow_list_item_horizontal_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_user_name_list_item_horizontal_recycler_view"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/viewsColor"
                android:text="follow"
                android:textSize="10dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>